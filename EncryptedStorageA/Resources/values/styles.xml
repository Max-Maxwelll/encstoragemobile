<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/textColor</item>
    <item name="android:textColorPrimary">@color/textColorPrimary</item>
    <item name="colorControlNormal">@color/colorControlNormal</item>
    <item name="android:textColorHint">@color/textColorHint</item>

    <item name="android:itemBackground">@color/colorPrimaryDark</item>
  </style>
  <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
  </style>
  <style name="ToolbarColoredBackArrow" parent="AppTheme">
    <item name="android:textColorSecondary">#ffffff</item>
  </style>

  <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/whiteColor</item>
  </style>

  <style name="RedButton" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/redButton</item>
    <item name="android:textColor">@color/whiteColor</item>
  </style>

  <style name="NormalButton" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/colorAccent</item>
    <item name="android:textColor">@color/whiteColor</item>
  </style>
</resources>
